    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json && tsc-alias",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .js,.ts --max-warnings=0 --cache --report-unused-disable-directives --report-unused-disable-directives --resolve-plugins-relative-to=. ./",
    "lint:fix": "pnpm lint --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
