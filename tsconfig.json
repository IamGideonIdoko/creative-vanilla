{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build/server"
  },
  "include": ["./*.ts", "./*.js", "./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["node_modules", "src/client/public"],
  "ts-node": {
    "esm": true
  }
}
