{
  "compilerOptions": {
    "target": "ES5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build/server",
    "noImplicitAny": true
  },
  "include": ["./*.ts", "./*.js", "./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["node_modules", "src/client/public"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
